{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++.exe build active file",
        "command": "g++",
        "args": ["-g", "${workspaceFolder}\\*.cpp", "-std=c++17", "-o", "${workspaceFolder}\\assignment-2.exe"],
        "options": {
